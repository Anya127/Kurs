= form_for @actor do |f|
  - if @actor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actor.errors.count, "error")} prohibited this actor from being saved:"
      %ul
        - @actor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :l_name
    = f.text_area :l_name
  .field
    = f.label :f_name
    = f.text_area :f_name
  .field
    = f.label :s_name
    = f.text_area :s_name
  .field
    = f.label :d_birthday
    = f.date_select :d_birthday
  .actions
    = f.submit 'Save'
