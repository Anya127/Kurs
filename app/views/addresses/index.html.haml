%table
  %thead
    %tr
      %th Кинотеатр
      %th Фильм
      %th
      %th
      %th

  %tbody
    - @addresses.each do |address|
      %tr
        %td= address.cinema
        %td= address.film
        %td= link_to 'Просмотреть', address
        %td= link_to 'Редактировать', edit_address_path(address)
        %td= link_to 'Удалить', address, method: :delete, data: { confirm: 'Are you sure?' }

%br

