= form_for @film do |f|
  = error_messages_for @film
  .form-actions.bottom20
    = f.submit nil, class: 'btn btn-primary'
  .row
    .col-md-6
      .form-group
        = f.label :name_f
        = f.text_area :name_f, class: 'form-control', rows: 1
        = f.error_messages_for(:name_f)
    .col-md-6
      .form-group
        = f.label :genre_f
        = f.text_area :genre_f, class: 'form-control', rows: 1
        = f.error_messages_for(:genre_f)
  .row
    .col-md-6
      .form-group
        = f.label :lasting_f
        = f.text_area :lasting_f, class: 'form-control', rows: 1
        = f.error_messages_for(:lasting_f)
    .col-md-6
      .form-group
        = f.label :country_f
        = f.text_area :country_f, class: 'form-control', rows: 1
        = f.error_messages_for(:country_f)
  .row
    .col-md-6
      .form-group
        = f.label :companies_f
        = f.text_area :companies_f, class: 'form-control', rows: 1
        = f.error_messages_for(:companies_f)
    .col-md-6
      .form-group
        = f.label :min_age
        = f.number_field :min_age, class: 'form-control'
        = f.error_messages_for(:min_age)

  .row.bottom20
    .col-md-12
      -# Кнопка для добавления связи роль-пользователь. См. role_users_helper
      -# = link_to_add_role(f, f.object)
  - i = 0
  = f.fields_for(:parts) do |fr|
    = fr.hidden_field(:id)
    = render('films/one_part_form', fr: fr, i: i += 1)
