=breadcrumb_tag do
  %li.active
    = @film.name_f
  %li
    = link_to 'Фильмы', films_path
  %li
    Кинотеатры/Фильмы

%h1= @film.name_f

%dl
  %dt= Film.human_attribute_name(:name_f)
  %dd= @film.name_f

  %dt= Film.human_attribute_name(:genre_f)
  %dd= @film.genre_f

  %dt= Film.human_attribute_name(:lasting_f)
  %dd= @film.lasting_f

  %dt= Film.human_attribute_name(:country_f)
  %dd= @film.country_f

  %dt= Film.human_attribute_name(:companies_f)
  %dd= @film.companies_f

  %dt= Film.human_attribute_name(:min_age)
  %dd= @film.min_age

= link_to edit_film_path(@film), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')
= link_to @film, :method => :delete,
:data => { :confirm => t('buttons.confirm.film') },
class: 'btn btn-danger' do
  = fa_icon :times
  = t('buttons.destroy')
